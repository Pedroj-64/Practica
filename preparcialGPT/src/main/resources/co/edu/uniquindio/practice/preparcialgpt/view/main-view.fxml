<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.uniquindio.practice.preparcialgpt.controller.MainViewController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #1976D2;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label text="FitHub+" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnDashboard" mnemonicParsing="false" onAction="#navigateToDashboard" text="Dashboard" />
            <Button fx:id="btnCatalogo" mnemonicParsing="false" onAction="#navigateToCatalogo" text="Catálogo" />
            <Button fx:id="btnNuevaReserva" mnemonicParsing="false" onAction="#navigateToNuevaReserva" text="Nueva Reserva" />
            <Button fx:id="btnImportacion" mnemonicParsing="false" onAction="#navigateToImportacion" text="Importación" />
            <Button fx:id="btnReportes" mnemonicParsing="false" onAction="#navigateToReportes" text="Reportes" />
         </children>
      </HBox>
   </top>
   <center>
      <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
         <children>
            <!-- Aquí se cargarán dinámicamente las vistas -->
         </children>
      </StackPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #F5F5F5;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="FitHub+ Centro Deportivo y de Bienestar © 2025" />
         </children>
      </HBox>
   </bottom>
</BorderPane>