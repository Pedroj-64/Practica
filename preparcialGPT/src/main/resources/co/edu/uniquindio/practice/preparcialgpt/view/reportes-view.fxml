<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.practice.preparcialgpt.controller.ReportesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Reportes y Análisis" style="-fx-font-weight: bold;">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <HBox spacing="10.0">
         <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Tipo de Reporte" />
                  <ComboBox fx:id="cbTipoReporte" promptText="Seleccione tipo de reporte" maxWidth="Infinity" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Periodo" />
                  <HBox spacing="5.0">
                     <children>
                        <DatePicker fx:id="dateInicio" promptText="Fecha Inicio" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                        <DatePicker fx:id="dateFin" promptText="Fecha Fin" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="btnGenerarReporte" mnemonicParsing="false" onAction="#generarReporte" text="Generar Reporte" />
         </children>
      </HBox>
      
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="Vista de Datos">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <TableView fx:id="tblDatosReporte" VBox.vgrow="ALWAYS">
                           <!-- Las columnas se generarán dinámicamente según el tipo de reporte -->
                        </TableView>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Total de registros:" />
                              <Label fx:id="lblTotalRegistros" text="0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Gráficos">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Tipo de Gráfico:" />
                              <ComboBox fx:id="cbTipoGrafico" promptText="Seleccione tipo de gráfico" />
                           </children>
                        </HBox>
                        
                        <StackPane VBox.vgrow="ALWAYS">
                           <children>
                              <PieChart fx:id="pieChart" visible="false" />
                              <BarChart fx:id="barChart" visible="false">
                                 <xAxis>
                                    <CategoryAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                    <NumberAxis side="LEFT" />
                                 </yAxis>
                              </BarChart>
                              <LineChart fx:id="lineChart" visible="false">
                                 <xAxis>
                                    <CategoryAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                    <NumberAxis side="LEFT" />
                                 </yAxis>
                              </LineChart>
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Resumen">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label text="Estadísticas Clave" style="-fx-font-weight: bold;">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        
                        <GridPane hgap="20.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <VBox spacing="5.0" style="-fx-background-color: #E3F2FD; -fx-background-radius: 5;">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Total de Ingresos" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblTotalIngresos" text="$0" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" style="-fx-background-color: #E8F5E9; -fx-background-radius: 5;" GridPane.columnIndex="1">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Total de Reservas" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblTotalReservas" text="0" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" style="-fx-background-color: #FFF8E1; -fx-background-radius: 5;" GridPane.rowIndex="1">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Servicio Más Reservado" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblServicioMasReservado" text="-" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" style="-fx-background-color: #F3E5F5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Cliente Frecuente" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblClienteFrecuente" text="-" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" style="-fx-background-color: #E0F7FA; -fx-background-radius: 5;" GridPane.rowIndex="2">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Horario Preferido" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblHorarioPreferido" text="-" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" style="-fx-background-color: #FFEBEE; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <children>
                                    <Label text="Método de Pago Popular" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblMetodoPagoPopular" text="-" style="-fx-font-size: 18px;" />
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                        
                        <Separator />
                        
                        <Label text="Resumen Ejecutivo" style="-fx-font-weight: bold;">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        
                        <TextArea fx:id="txtResumenEjecutivo" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnExportar" mnemonicParsing="false" onAction="#exportarReporte" text="Exportar Reporte" />
            <Button fx:id="btnImprimir" mnemonicParsing="false" onAction="#imprimirReporte" text="Imprimir" />
         </children>
      </HBox>
   </children>
</VBox>