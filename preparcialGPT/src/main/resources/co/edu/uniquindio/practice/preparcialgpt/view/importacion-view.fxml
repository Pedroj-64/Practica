<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.practice.preparcialgpt.controller.ImportacionController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Importación de Datos" style="-fx-font-weight: bold;">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <TitledPane animated="true" text="Seleccionar Fuente de Datos" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <RadioButton fx:id="rbCSV" mnemonicParsing="false" selected="true" text="Archivo CSV">
                           <toggleGroup>
                              <ToggleGroup fx:id="fuenteDatos" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rbJSON" mnemonicParsing="false" text="Archivo JSON" toggleGroup="$fuenteDatos" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="txtRutaArchivo" promptText="Ruta del archivo..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnExaminar" mnemonicParsing="false" onAction="#examinarArchivo" text="Examinar..." />
                     </children>
                  </HBox>
                  
                  <Separator />
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Tipo de datos a importar:" />
                        <ComboBox fx:id="cbTipoDatos" promptText="Seleccione tipo de datos" maxWidth="Infinity" />
                     </children>
                  </VBox>
                  
                  <TitledPane animated="true" expanded="false" text="Opciones avanzadas">
                     <content>
                        <GridPane hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Delimitador (CSV):" />
                              <TextField fx:id="txtDelimitador" text="," GridPane.columnIndex="1" />
                              
                              <Label text="Codificación:" GridPane.rowIndex="1" />
                              <ComboBox fx:id="cbCodificacion" promptText="UTF-8" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity" />
                              
                              <CheckBox fx:id="chkPrimeraLineaEncabezado" mnemonicParsing="false" selected="true" 
                                        text="Primera línea contiene encabezados" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                     </content>
                  </TitledPane>
                  
                  <Button fx:id="btnPrevisualizar" mnemonicParsing="false" onAction="#previsualizarDatos" text="Previsualizar Datos" maxWidth="Infinity" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      
      <TitledPane animated="true" text="Previsualización de Datos" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <TableView fx:id="tblPreview" VBox.vgrow="ALWAYS">
                     <!-- Las columnas se generarán dinámicamente según los datos importados -->
                  </TableView>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Registros encontrados:" />
                        <Label fx:id="lblRegistrosEncontrados" text="0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelarImportacion" text="Cancelar" />
            <Button fx:id="btnImportar" mnemonicParsing="false" onAction="#importarDatos" text="Importar Datos" />
         </children>
      </HBox>
   </children>
</VBox>