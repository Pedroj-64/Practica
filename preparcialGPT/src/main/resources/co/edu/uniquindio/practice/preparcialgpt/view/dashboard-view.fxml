<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.practice.preparcialgpt.controller.DashboardController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Panel de Control - FitHub+" style="-fx-font-weight: bold;">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <HBox spacing="20.0">
         <children>
            <VBox styleClass="dashboard-card" style="-fx-background-color: #E3F2FD; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="Reservas Activas" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblReservasActivas" text="0" style="-fx-font-size: 32px;" />
               </children>
            </VBox>
            <VBox styleClass="dashboard-card" style="-fx-background-color: #E8F5E9; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="Ingresos del Mes" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblIngresosMes" text="$0" style="-fx-font-size: 32px;" />
               </children>
            </VBox>
            <VBox styleClass="dashboard-card" style="-fx-background-color: #FFF8E1; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="Clientes Nuevos" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblClientesNuevos" text="0" style="-fx-font-size: 32px;" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="Ocupación por Servicios">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Periodo:" />
                              <ComboBox fx:id="cbPeriodo" promptText="Seleccionar periodo" />
                           </children>
                        </HBox>
                        <PieChart fx:id="chartOcupacion" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Ingresos por Servicio">
               <content>
                  <BarChart fx:id="chartIngresos">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </BarChart>
               </content>
            </Tab>
            <Tab text="Próximas Reservas">
               <content>
                  <TableView fx:id="tblProximasReservas">
                     <columns>
                        <TableColumn fx:id="colFecha" text="Fecha" />
                        <TableColumn fx:id="colHora" text="Hora" />
                        <TableColumn fx:id="colServicio" text="Servicio" />
                        <TableColumn fx:id="colCliente" text="Cliente" />
                        <TableColumn fx:id="colEstado" text="Estado" />
                     </columns>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnActualizar" mnemonicParsing="false" onAction="#actualizarDashboard" text="Actualizar Datos" />
         </children>
      </HBox>
   </children>
</VBox>